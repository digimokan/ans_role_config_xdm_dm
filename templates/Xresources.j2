! vim: set filetype=xdefaults:
! ANSIBLE-MANAGED CONFIGURATION FILE

! KEYBINDINGS
xlogin*login.translations: #override \
  <Key>Tab: set-session-argument() finish-field()

! MENU TITLES, LABELS, AND INPUTS
xlogin.Login.fail:           Authorization Failed
xlogin.Login.greeting:       Log In To Start i3wm
xlogin.Login.namePrompt:     User Name:
xlogin.Login.passwdPrompt:   Password:
xlogin.Login.allowRootLogin: false
xlogin.Login.echoPasswd:     true

! COLORS AND FONTS
xlogin.Login.background:  {{ xdm_login_window_bg_color }}
xlogin.Login.foreground:  {{ xdm_login_window_ui_text_color }}
xlogin.Login.greetColor:  {{ xdm_login_window_ui_text_color }}
xlogin.Login.promptColor: {{ xdm_login_window_ui_text_color }}
xlogin.Login.failColor:   {{ xdm_login_window_error_text_color }}
xlogin.Login.inpColor:    {{ xdm_login_window_user_input_text_color }}
xlogin.Login.greetFace:   {{ xdm_login_window_main_title_font }}
xlogin.Login.promptFace:  {{ xdm_login_window_user_prompt_font }}
xlogin.Login.failFace:    {{ xdm_login_window_error_text_font }}
xlogin.Login.face:        {{ xdm_login_window_user_input_text_font }}

! APPS LAUNCHED BY XSETUP
xclock.Clock.background:  {{ xdm_main_bg_color }}
xclock.Clock.foreground:  {{ xdm_main_text_color }}
xclock*borderWidth:       0
xmessage*background:      {{ xdm_main_bg_color }}
xmessage*foreground:      {{ xdm_main_text_color }}
xmessage*borderWidth:     0
xmessage*message.scrollHorizontal: Never
xmessage*message.scrollVertical:   Never
xmessage*Command.shapeStyle:       rectangle

! EXTRA XRESOURCES IMPORTED FROM EXTERNAL ROLES

{% for resource in xdm_extra_xresources_lines %}
{{ '! ' }}{{ resource.descrip }}
{{ resource.lines }}
{% endfor %}
