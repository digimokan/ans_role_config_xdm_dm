! vim: set filetype=xdefaults:
! ANSIBLE-MANAGED CONFIGURATION FILE

! GENERAL OPTIONS

xlogin.Login.allowRootLogin: false
xlogin.Login.echoPasswd:     true
xlogin.Login.fail:           Authorization Failed
xlogin.Login.greeting:       Log In To Start i3wm
xlogin.Login.namePrompt:     User Name:
xlogin.Login.passwdPrompt:   Password:

! COLORS

xroot.background:         {{ login_screen_bg_color }}
xlogin.Login.background:  {{ login_screen_bg_color }}
xlogin.Login.foreground:  {{ login_screen_ui_text_color }}
xlogin.Login.greetColor:  {{ login_screen_ui_text_color }}
xlogin.Login.promptColor: {{ login_screen_ui_text_color }}
xlogin.Login.failColor:   {{ login_screen_error_text_color }}
xlogin.Login.inpColor:    {{ login_screen_user_input_text_color }}

! FONTS

xlogin.Login.greetFace:  Serif-32:bold
xlogin.Login.promptFace: Serif-22:italic
xlogin.Login.failFace:   Serif-22:italic
xlogin.Login.face:       Monospace-20

! CLOCK PRINT-OUT

xclock*background:       {{ login_screen_bg_color }}
xclock*foreground:       {{ login_screen_ui_text_color }}
xclock*borderWidth:      0
xclock*font:             Monospace-20
xClock*strftime:         %a %d %b %H:%M:%S
xclock.Clock.analog:     false
xclock.Clock.chime:      false
xclock.Clock.render:     false
xclock.Clock.update:     5

